      "headers": {
        "Authorization": "Bearer <%= access_token %>",
        "Content-Type": "application/json",
        "X-Freshservice-API-Version": "2.0"
      },
      "query": {
        "query": "<%= context.query %>",
        "page": "<%= context.page %>",
        "per_page": "<%= context.per_page %>"
      }
    },
    "options": {
      "isOAuth": true
    }
  },
