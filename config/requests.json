{
  "validateAuth": {
    "schema": {
      "method": "GET",
      "protocol": "https",
      "host": "<%= iparam.freshservice_domain %>.freshservice.com",
      "path": "/api/v2/tickets",
      "headers": {
        "Authorization": "Bearer <%= access_token %>",
        "Content-Type": "application/json",
        "X-Freshservice-API-Version": "2.0"
      }
    },
    "options": {
      "isOAuth": true
    }
  },
  "searchUsers": {
    "schema": {
      "method": "GET",
      "protocol": "https",
      "host": "<%= iparam.freshservice_domain %>.freshservice.com",
