{
  "validateAuth": {
    "schema": {
      "method": "GET",
      "protocol": "https",
      "host": "<%= iparam.freshservice_domain %>.freshservice.com",
      "path": "/api/v2/tickets",
      "headers": {
        "Authorization": "Basic <%= encode(iparam.api_key + ':x') %>",
        "Content-Type": "application/json"
      }
    }
  },
  "searchUsers": {
    "schema": {
      "method": "GET",
      "protocol": "https",
      "host": "<%= iparam.freshservice_domain %>.freshservice.com",
      "path": "/api/v2/requesters",
      "headers": {
        "Authorization": "Basic <%= encode(iparam.api_key + ':x') %>",
        "Content-Type": "application/json"
      },
      "query": {
        "query": "\"first_name:'<%= context.query %>'\" OR \"last_name:'<%= context.query %>'\" OR \"email:'<%= context.query %>'\"",
        "page": "<%= context.page %>",
        "per_page": "<%= context.per_page %>",
        "include": "department"
      }
    }
  },
  "searchGroups": {
    "schema": {
      "method": "GET",
      "protocol": "https",
      "host": "<%= iparam.freshservice_domain %>.freshservice.com",
      "path": "/api/v2/groups",
      "headers": {
        "Authorization": "Basic <%= encode(iparam.api_key + ':x') %>",
        "Content-Type": "application/json"
      },
      "query": {
        "query": "name:'<%= context.query %>'",
        "page": "<%= context.page %>",
        "per_page": "<%= context.per_page %>"
      }
    }
  },
  "searchServices": {
    "schema": {
      "method": "GET",
      "protocol": "https",
      "host": "<%= iparam.freshservice_domain %>.freshservice.com",
      "path": "/api/v2/services",
      "headers": {
        "Authorization": "Basic <%= encode(iparam.api_key + ':x') %>",
        "Content-Type": "application/json"
      },
      "query": {
        "query": "name:'<%= context.query %>'",
        "page": "<%= context.page %>",
        "per_page": "<%= context.per_page %>"
      }
    }
  },
  "searchAssets": {
    "schema": {
      "method": "GET",
      "protocol": "https",
      "host": "<%= iparam.freshservice_domain %>.freshservice.com",
      "path": "/api/v2/assets",
      "headers": {
        "Authorization": "Basic <%= encode(iparam.api_key + ':x') %>",
        "Content-Type": "application/json"
      },
      "query": {
        "query": "name:'<%= context.query %>' OR asset_tag:'<%= context.query %>'",
        "page": "<%= context.page %>",
        "per_page": "<%= context.per_page %>"
      }
    }
  },
  "createChange": {
    "schema": {
      "method": "POST",
      "protocol": "https",
      "host": "<%= iparam.freshservice_domain %>.freshservice.com",
      "path": "/api/v2/changes",
      "headers": {
        "Authorization": "Basic <%= encode(iparam.api_key + ':x') %>",
        "Content-Type": "application/json"
      }
    }
  }
} 